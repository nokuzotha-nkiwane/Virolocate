    //file paths
    outdir="results"
    trimmomatic_adapters = '/analyses/users/nokuzothan/Virolocate/trim_adapters.fa'
    samplesheet = '/analyses/users/nokuzothan/disc_pipe/s_sheet.csv'
    taxidlist = 'stub_test_data/taxidlist.txt'

    // //databases
    // rvdb_fasta = "/home/nokuzothan/workspace/disc_pipe/ncbidb/RVDB/v30.0/U-RVDBv30.0-prot.fasta"
    // viral_csv = "null"
    // ncbi_fasta = "null"
    // ncbi_nr_fasta = "null"
    rvdb_fasta = "/analyses/users/nokuzothan/disc_pipe/ncbidb/fasta/nr.faa"
    viral_csv = "/analyses/download/Virolocate/virus_taxonomy_lvls.csv"
    ncbi_nr_fasta = "/analyses/users/nokuzothan/disc_pipe/ncbidb/fasta/nr.faa"
    ncbi_nt_db = "/analyses/users/nokuzothan/disc_pipe/ncbidb/nt"
    taxdb = "/analyses/users/nokuzothan/ncbi_taxdump"
    


    // MultiQC options
    multiqc_config             = null
    multiqc_title              = null
    multiqc_logo               = null
    max_multiqc_email_size     = '25.MB'

    // Boilerplate options
    outdir                       = "results"
    publish_dir_mode             = 'copy'
    email                        = null
    email_on_fail                = null
    plaintext_email              = false
    monochrome_logs              = false
    help                         = false
    help_full                    = false
    show_hidden                  = false
