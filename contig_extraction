#maybe best to add this portion of code to the bottom of diamond script
#!/bin/env bash

#variables and directories
wdir="/analyses/users/nokuzothan/disc_pipe/init_tools"
current_dir="${wdir}/diamond"
output="${current_dir}/output"
threads=$((`/bin/nproc` -2))

#loop over each .m8 files in output and get matches with e-value < 1e-10
for file in ${output}/*.matches.m8; do 
    file_name=$(basename ${file} .matches.m8)
    awk '$11 <= 1e-10' "${file}" > "${output}/${file_name}.filtered.m8"
done
